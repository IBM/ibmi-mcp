{
  "mcpServers": {
    "default-server": {
      "command": "npx",
      "args": ["ibmi-mcp-server"],
      "env": {
        "TOOLS_YAML_PATH": "tools",
        "NODE_OPTIONS": "--no-deprecation",
        "DB2i_HOST": "<DB2i_HOST>",
        "DB2i_USER": "<DB2i_USER>",
        "DB2i_PASS": "<DB2i_PASS>",
        "DB2i_PORT": "<DB2i_PORT>",
        "MCP_TRANSPORT_TYPE": "stdio"
      }
    }
  }
}
