{
  "name": "ibmi-mcp-monorepo",
  "version": "1.9.1",
  "description": "IBM i MCP Server - Monorepo containing server, tools, agents, and deployment configurations",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IBM/ibmi-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/IBM/ibmi-mcp-server.git/issues"
  },
  "homepage": "https://github.com/IBM/ibmi-mcp-server.git#readme",
  "scripts": {
    "install:server": "cd server && npm install",
    "build": "cd server && npm run build && npm link",
    "rebuild": "cd server && npm run rebuild",
    "start": "npm run start:http",
    "start:http": "cd server && npm run start:http",
    "start:stdio": "cd server && npm run start:stdio",
    "start:agent": "cd server && npm run start:agent",
    "test": "cd server && npm test",
    "test:watch": "cd server && npm run test:watch",
    "test:coverage": "cd server && npm run test:coverage",
    "lint": "cd server && npm run lint",
    "typecheck": "cd server && npm run typecheck",
    "format": "cd server && npm run format",
    "validate": "cd server && npm run validate",
    "inspector": "cd server && npm run inspector",
    "docker:up": "cd apps/docker && docker-compose up -d",
    "docker:down": "cd apps/docker && docker-compose down",
    "docker:logs": "cd apps/docker && docker-compose logs -f",
    "list-toolsets": "cd server && npm run list-toolsets -- --tools ../tools"
  },
  "keywords": [
    "ibm-i",
    "mcp",
    "model-context-protocol",
    "sql",
    "agents",
    "monorepo",
    "typescript",
    "mcp-server"
  ],
  "author": "ajshedivy <adam.shedivy@ibm.com> (https://github.com/ajshedivy/ibmi-mcp-server#readme)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
